<div class="card mb-2">
    <div class="card-body">
        <div class="d-flex justify-content-between">
        <h5 class="card-title"><a href="{{ path('app_user', { 'username': truit.user.username}) }}">{{ truit.user.name }}</a>
            <small class="text-muted">@{{ truit.user.username }}</small></h5>
        <div>{{ truit.createdAt | date('Y-m-d h:i:s') }}</div>
        </div>
        <p class="card-text">{{ truit.text }}</p>

        {#  {% if truit.image is defined %}
        <div  style="width: 150px; height: auto" >
            <img class="w-100 h-100" style="object-fit: scale-down" src="images/{{ truit.image }}" alt="image"/>
        </div>
        {%  endif %} #}

    </div>
    <div class="card-footer d-flex justify-content-between text-muted">
        <div class="pe-5"><i class="bi bi-chat"></i></div>
        <div class="pe-5"><i class="bi bi-arrow-repeat"></i></div>
        <div class="pe-5"><i class="bi bi-heart"></i></div>
        <div class="pe-5"><i class="bi bi-share"></i></div>
    </div>

</div>