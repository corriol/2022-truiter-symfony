{% extends 'base_truiter.html.twig' %}

{% block title %}{{ user.name }} (@{{ user.username }}) / Truiter{% endblock %}

{% block body %}
<div>
    <div>
        <h2>{{ user.name }}</h2>
        <h3>@{{ user.username }}</h3>
        <h4>Tuits</h4>

        {%  if user == app.user %}
         <a href="{{ path('app_settings_profile') }}" class="btn btn-primary">Editar perfil</a>
        {% endif %}
    </div>

    {% for truit in truits %}
    {% include '_tuit.html.twig' %}
    {% endfor %}
</div>
{% endblock %}
